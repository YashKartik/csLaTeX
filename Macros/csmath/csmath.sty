\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{csmath}[2024/03/25 Custom LaTeX commands for computer scientists]

% Check if amsmath package is loaded, and if not, load it
\@ifpackageloaded{amsmath}{}{\RequirePackage{amsmath}} % Enhance mathematics features
\@ifpackageloaded{xspace}{}{\RequirePackage{xspace}} % Proper spacing using xspace

% Mathematical Notation
\newcommand{\mathify}[1]{\ensuremath{#1}} % Ensure math mode for the argument
\newcommand{\set}[1]{\mathify{\left\{ #1 \right\}}} % Format a set with curly braces
\newcommand{\floor}[1]{\ensuremath{\left\lfloor #1 \right\rfloor}} % Format the floor function
\newcommand{\abs}[1]{\mathify{\left| #1 \right|}} % Format the absolute value function
\newcommand{\intersection}{\ensuremath{\cap}} % Format the intersection symbol
\newcommand{\union}{\ensuremath{\cup}} % Format the union symbol
\newcommand{\xor}{\ensuremath{\oplus}} % Format the XOR symbol
\newcommand{\Xor}{\ensuremath{\bigoplus}} % Format the big XOR symbol
\newcommand{\eqdef}{\stackrel{\textrm{def}}{=}} % Format the equality by definition symbol
\newcommand{\eqq}{\stackrel{\textrm{?}}{=}} % Format the uncertain equality symbol
\newcommand{\inq}{\stackrel{\textrm{?}}{\in}} % Format the uncertain membership symbol
\newcommand{\paren}[1]{\ensuremath{(#1)}} % Define a command to format parentheses without automatic sizing
\newcommand{\Paren}[1]{\ensuremath{\left(#1\right)}} % Define a command to format parentheses with automatic sizing

% Number Theory
\renewcommand*{\gcd}{\ensuremath{\mathsf{gcd}}} % Format the greatest common divisor command
\newcommand{\lcm}{\ensuremath{\mathsf{lcm}}} % Format the least common multiple command
\newcommand{\lcmset}[1]{\ensuremath{\mathtt{lcm}\left(#1\right)}} % Format the least common multiple set command
\newcommand{\jacobi}[2]{\ensuremath{\left(\frac{#1}{#2}\right)}} % Format the Jacobi symbol
\newcommand{\legendre}[2]{\ensuremath{\left(\frac{#1}{#2}\right)}} % Format the Legendre symbol

% Set notation commands
\newcommand{\N}{\ensuremath{\mathbb{N}}} % Set of natural numbers
\newcommand{\Z}{\ensuremath{\mathbb{Z}}} % Set of integers
\newcommand{\Q}{\ensuremath{\mathbb{Q}}} % Set of rational numbers
\newcommand{\R}{\ensuremath{\mathbb{R}}} % Set of real numbers
\newcommand{\C}{\ensuremath{\mathbb{C}}} % Set of complex numbers
\newcommand{\Zplus}{\ensuremath{\mathbb{Z}^+}} % Set of positive integers
\newcommand{\Znonneg}{\ensuremath{\mathbb{Z}_0^+}} % Set of non-negative integers
\newcommand{\Rplus}{\ensuremath{\mathbb{R}^+}} % Set of positive real numbers
\newcommand{\Rnonneg}{\ensuremath{\mathbb{R}_0^+}} % Set of non-negative real numbers
\newcommand{\Qplus}{\ensuremath{\mathbb{Q}^+}} % Set of positive rational numbers
\newcommand{\Qnonneg}{\ensuremath{\mathbb{Q}_0^+}} % Set of non-negative rational numbers
\newcommand{\F}{\ensuremath{\mathbb{F}}} % Fields

% Calculus and Analysis
\newcommand*{\dd}{\mathrm{d}} % Differential operator
\newcommand*{\ddiff}[2]{\frac{\diff{#1}}{\diff{#2}}} % Differential quotient
\newcommand*{\pdiff}[2]{\frac{\partial{#1}}{\partial{#2}}} % Partial derivative
\newcommand*{\gradientd}[1]{\overrightarrow{\triangledown #1}} % Gradient
\newcommand*{\Diff}[1]{\mathrm{d^#1}} % Differential of order n

% Vectors
\renewcommand*{\i}{\hat{i}} % Unit vector i
\renewcommand*{\j}{\hat{j}} % Unit vector j
\renewcommand*{\k}{\hat{k}} % Unit vector k

% Combinatorics
\newcommand*{\nPr}[2]{{#1}P{#2}} % Permutations
\newcommand*{\nPrf}[2]{\frac{#1!}{(#1-#2)!}} % Permutations with factorials
\newcommand*{\nCr}[2]{{#1}C{#2}} % Combinations
\newcommand*{\nCrf}[2]{\frac{#1!}{(#1-#2)!#2!}} % Combinations with factorials

% Trigonometric Functions
\renewcommand*{\arcsin}{\sin^{-1}} % Inverse sine
\renewcommand*{\arccos}{\cos^{-1}} % Inverse cosine
\renewcommand*{\arctan}{\tan^{-1}} % Inverse tangent
\newcommand*{\arccot}{\cot^{-1}} % Inverse cotangent
\newcommand*{\arcsec}{\sec^{-1}} % Inverse secant
\newcommand*{\arccsc}{\csc^{-1}} % Inverse cosecant

% Probability and statistics commands
\newcommand{\Prob}[1]{\ensuremath{\mathsf{Prob}\left[#1\right]}} % Probability grouped notation
\renewcommand*{\Pr}{\ensuremath{\mathsf{Prob}}} % Probability Theory 
\newcommand{\Exp}[1]{\ensuremath{\mathrm{Exp}\left[#1\right]}} % Expectation notation
\newcommand{\half}{\ensuremath{\frac{1}{2}}} % Half as a fraction

% Logic commands
\newcommand{\true}{\texttt{\textbf{true}}} % True
\newcommand{\false}{\texttt{\textbf{false}}} % False
\newcommand{\var}[1]{\operatorname{#1}} % Variable representation

% Custom commands for document structure and formatting
\newcommand{\figcaption}[1]{\caption[]{#1}} % Defines a custom figure caption command
\newcommand{\tabcaption}[1]{\caption[]{#1}} % Defines a custom table caption command
\newcommand{\head}[1]{\chapter[Lecture \##1]{}} % Defines a custom chapter heading command

