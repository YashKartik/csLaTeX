% Check if amsmath package is loaded, and if not, load it
\@ifpackageloaded{amsmath}{}{\RequirePackage{amsmath}} % Enhance math features

% Math commands
% Ensure math mode
% Arguments:
%   #1: The mathematical expression
\newcommand{\mathify}[1]{\ensuremath{#1}} % Ensure math mode

% Differential operator
\newcommand{\dd}{\mathrm{d}}

% Big O notation
\newcommand{\bigO}{\mathcal{O}}

% Set notation
% Arguments:
%   #1: The elements of the set
\newcommand{\set}[1]{\mathify{\left\{ #1 \right\}}}

% Floor function
% Arguments:
%   #1: The expression inside the floor function
\newcommand{\floor}[1]{%
	\ifmmode
		\left\lfloor #1 \right\rfloor
	\else
		\PackageError{csmath}{\string\floor\space outside math mode}{Use \string\floor\space only in math mode}%
	\fi
}

% Ceiling function
% Arguments:
%   #1: The expression inside the ceiling function
\newcommand{\ceil}[1]{%
	\ifmmode
		\left\lceil #1 \right\rceil
	\else
		\PackageError{csmath}{\string\ceil\space outside math mode}{Use \string\ceil\space only in math mode}%
	\fi
}

% Number theory commands
% Greatest common divisor
\renewcommand{\gcd}{\mathrm{gcd}}

% Least common multiple
\newcommand{\lcm}{\mathrm{lcm}}

% Least common multiple of a set of numbers
% Arguments:
%   #1: The set of numbers
\newcommand{\lcmset}[1]{%
	\ensuremath{\mathrm{lcm}\left(#1\right)}%
} % Least common multiple of a set

% Jacobi symbol
% Arguments:
%   #1: The numerator
%   #2: The denominator
\newcommand{\jacobi}[2]{%
	\ensuremath{\left(\frac{#1}{#2}\right)}%
} % Jacobi symbol

% Legendre symbol
% Arguments:
%   #1: The numerator
%   #2: The prime modulus
\newcommand{\legendre}[2]{%
	\ensuremath{\left(\frac{#1}{#2}\right)}%
} % Legendre symbol

% Absolute value
% Arguments:
%   #1: The expression whose absolute value is to be taken
\newcommand{\abs}[1]{\mathify{\left| #1 \right|}}

% Set notation commands
\newcommand{\N}{\mathbb{N}} % Set of natural numbers
\newcommand{\Z}{\mathbb{Z}} % Set of integers
\newcommand{\Q}{\mathbb{Q}} % Set of rational numbers
\newcommand{\R}{\mathbb{R}} % Set of real numbers
\newcommand{\C}{\mathbb{C}} % Set of complex numbers
\newcommand{\Zplus}{\mathbb{Z}^+} % Set of positive integers
\newcommand{\Znonneg}{\mathbb{Z}_0^+} % Set of non-negative integers
\newcommand{\Rplus}{\mathbb{R}^+} % Set of positive real numbers
\newcommand{\Rnonneg}{\mathbb{R}_0^+} % Set of non-negative real numbers
\newcommand{\Qplus}{\mathbb{Q}^+} % Set of positive rational numbers
\newcommand{\Qnonneg}{\mathbb{Q}_0^+} % Set of non-negative rational numbers

% Probability and statistics commands
\newcommand{\Prob}[1]{\mathify{\mathrm{Pr}\left[#1\right]}} % Probability notation
\newcommand{\Exp}[1]{\mathify{\mathrm{Exp}\left[#1\right]}} % Expectation notation
\newcommand{\half}{\frac{1}{2}} % half as a fraction

% Logic commands
\newcommand{\true}{\texttt{\textbf{true}}} % True
\newcommand{\false}{\texttt{\textbf{false}}} % False
\newcommand{\var}[1]{\operatorname{#1}} % Variable representation

% Custom commands for document structure and formatting
\newcommand{\figcaption}[1]{\caption[]{#1}} % Figure caption
\newcommand{\tabcaption}[1]{\caption[]{#1}} % Table caption
\newcommand{\head}[1]{\chapter[Lecture \##1]{}} % Lecture heading

